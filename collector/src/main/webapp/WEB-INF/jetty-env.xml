<?xml version="1.0"  encoding="ISO-8859-1"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<!-- Set up a connection pool resource to access via JNDI  -->
<Configure id="thisfile" class="org.mortbay.jetty.webapp.WebAppContext">
    <New id="MessagesQueue" class="org.mortbay.jetty.plus.naming.Resource">
        <Arg></Arg>
        <Arg>jdbc/MessagesQueue</Arg>
        <Arg>
            <New class="org.postgresql.ds.PGSimpleDataSource">
                <Set name="User">Laura</Set>
                <Set name="Password"></Set>
                <Set name="DatabaseName">MessagesQueue</Set>
                <Set name="ServerName">localhost</Set>
                <Set name="PortNumber">5432</Set>
            </New>
        </Arg>
    </New>
</Configure>

